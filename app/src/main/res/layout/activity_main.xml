<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/luffy"
        android:layout_width="181dp"
        android:layout_height="159dp"
        app:layout_constraintBottom_toTopOf="@+id/brook"
        app:layout_constraintEnd_toStartOf="@+id/zoro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/luffy" />

    <ImageView
        android:id="@+id/zoro"
        android:layout_width="179dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toTopOf="@+id/bartolomeo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zoro" />

    <ImageView
        android:id="@+id/brook"
        android:layout_width="176dp"
        android:layout_height="190dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/chopper"
        app:layout_constraintEnd_toStartOf="@+id/bartolomeo"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/brook" />

    <ImageView
        android:id="@+id/bartolomeo"
        android:layout_width="161dp"
        android:layout_height="166dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/franky"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bartolomeo" />

    <ImageView
        android:id="@+id/chopper"
        android:layout_width="179dp"
        android:layout_height="158dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/franky"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/chopper" />

    <ImageView
        android:id="@+id/franky"
        android:layout_width="138dp"
        android:layout_height="198dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/franky" />
</androidx.constraintlayout.widget.ConstraintLayout>